<h3>{{title}}</h3>
<small> by: {{author}}</small>
<br>
<p>{{contents}}</p>
<p>
    {{#if started}}
        <button {{action 'stop'}} class="btn btn-default">Stop</button>
    {{else}}
        <button {{action 'start'}} class="btn btn-default">Start</button>
    {{/if}}
</p>
{{time}}
{{#each note in model.notes}}
    {{note.note}} - <small><span class="text-muted">{{note.date}}, {{note.time}}</span></small> <br>
{{/each}}
<hr>
{{comment}} <br>
{{input value=comment}}
<button {{action 'addRating' model}}>Add Note</button>
